{
	"name": "express-typescript-boilerplate",
	"version": "1.0.14",
	"description": "An Express boilerplate backend",
	"author": "Edwin Hernandez",
	"repository": "edwinhern/express-typescript-2024",
	"main": "index.ts",
	"private": true,
	"scripts": {
		"build": "tsc && tsup",
		"start:dev": "node --import=tsx --watch src/index.ts",
		"start:prod": "node dist/index.js",
		"lint": "biome lint --fix",
		"format": "biome format --write",
		"test": "vitest run",
		"test:cov": "vitest run --coverage",
		"check": "pnpm lint && pnpm format && pnpm build && pnpm test"
	},
	"dependencies": {
		"@asteasolutions/zod-to-openapi": "7.3.3",
		"@vercel/blob": "^1.1.1",
		"bcrypt": "^6.0.0",
		"colorette": "^2.0.20",
		"cors": "2.8.5",
		"dotenv": "16.5.0",
		"express": "5.1.0",
		"express-async-handler": "^1.2.0",
		"express-rate-limit": "7.5.0",
		"firebase-admin": "^13.4.0",
		"helmet": "8.1.0",
		"http-status-codes": "2.3.0",
		"jsonwebtoken": "^9.0.2",
		"lodash": "^4.17.21",
		"multer": "^2.0.1",
		"pino": "9.7.0",
		"pino-http": "10.5.0",
		"slugify": "^1.6.6",
		"swagger-ui-express": "5.0.1",
		"uuid": "^11.1.0",
		"yup": "^1.6.1",
		"zod": "3.25.62"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@types/bcrypt": "^5.0.2",
		"@types/cors": "2.8.19",
		"@types/express": "5.0.3",
		"@types/jsonwebtoken": "^9.0.9",
		"@types/lodash": "^4.17.17",
		"@types/multer": "^1.4.13",
		"@types/supertest": "6.0.3",
		"@types/swagger-ui-express": "4.1.8",
		"@vitest/coverage-v8": "3.2.3",
		"pino-pretty": "13.0.0",
		"supertest": "7.1.1",
		"tsup": "8.5.0",
		"tsx": "4.20.1",
		"typescript": "5.8.3",
		"vite-tsconfig-paths": "5.1.4",
		"vitest": "3.2.3"
	},
	"tsup": {
		"entry": [
			"src/index.ts"
		],
		"outDir": "dist",
		"format": [
			"esm",
			"cjs"
		],
		"target": "es2020",
		"sourcemap": true,
		"clean": true,
		"dts": true,
		"splitting": false,
		"skipNodeModulesBundle": true
	},
	"packageManager": "pnpm@10.12.1"
}
