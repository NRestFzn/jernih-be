{
	"compilerOptions": {
		"target": "es2016",
		"module": "commonjs",
		"baseUrl": "./src",
		// "paths": {
		// 	"@/*": ["*"],
		// 	"@/common/*" : ["common/*"],
		// 	"@/config/*" : ["config/*"],
		// 	"@/controllers/*" : ["controllers/*"],
		// 	"@/modules/*" : ["modules/*"],
		// 	"@/routes/*" : ["routes/*"],
		// },
		"moduleResolution": "Node",
		"outDir": "dist",
		"importsNotUsedAsValues": "remove",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"types": ["vitest/globals"],
		"resolveJsonModule": true,
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
